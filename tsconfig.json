{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
       "esnext.asynciterable",
       "es2016",
       "dom"
     ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
